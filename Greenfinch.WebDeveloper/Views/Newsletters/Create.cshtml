@model Greenfinch.WebDeveloper.Data.Models.Newsletter

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<div class="container">
    <h2>Sign up the newsletter</h2>


    <hr />
    @{
        if (TempData.ContainsKey("success"))
        {
            <div class="alert-success myalert">
                @TempData["success"]
            </div>
        }
    }
    <div class="container col-md-6 panel-style">
        <div class="panel panel-primary">
            <div class="panel-heading text-center">Greenfinch Newsletter</div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HeardAbout" class="control-label"></label>
                        <select asp-for="HeardAbout" asp-items="Html.GetEnumSelectList<Greenfinch.WebDeveloper.Data.Models.HeardAbout>()" class="form-control"></select>
                        <span asp-validation-for="HeardAbout" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SignUpReason" class="control-label"></label>
                        <input asp-for="SignUpReason" class="form-control" />
                        <span asp-validation-for="SignUpReason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>


